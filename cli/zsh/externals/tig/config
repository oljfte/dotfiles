# REFACTOR: DRY temp TERM setting

# Aliases
alias tig="TERM=xterm-256color tig"

# ZLE
function open-tig-in-popup {
    [ $TMUX ] && tmux popup -d '#{pane_current_path}' -w 80% -h 80% -E "TERM=xterm-256color tig" || TERM=xterm-256color tig
}

zle -N open-tig-in-popup
bindkey -M vicmd '^f' open-tig-in-popup
bindkey -M viins '^f' open-tig-in-popup
