{
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnType": true,
    "coc.source.file.ignoreHidden": false,
    "codeLens.enable": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "python"
    ],
    "explorer.buffer.root.template": "[title]",
    "explorer.buffer.child.template": "[selection | 1] [bufnr] [name][modified]",
    "explorer.file.root.template": "[title] [git & 1] [root]",
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent] [icon][diagnosticError & 1][filename omitCenter 1][modified]",
    "explorer.file.column.indent.indentLine": false,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.expanded": "▼ ",
    "explorer.icon.collapsed": "▶ ",
    "explorer.filename.colored.enable": false,
    "signature.target": "echo",
    "diagnostic.format": "%message [%source]",
    "diagnostic.virtualText": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.separateRelatedInformationAsDiagnostics": true,
    "suggest.timeout": 5000,
    "suggest.asciiCharactersOnly": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=99"
    ],
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=99",
        "--ignore=E203,W503",
        "--statistics",
        "--count"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.sortImports.args": [
        "--line_length=99",
        "--multi_line_output=3"
    ],
    "python.terminal.executeInFileDir": true,
    "python.analysis.useLibraryCodeForTypes": false
}
